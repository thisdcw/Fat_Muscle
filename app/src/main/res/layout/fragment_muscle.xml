<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.mxsella.fatmuscle.view.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fdb70e"
            app:layout_heightPercent="2%h" />


        <TextView
            android:id="@+id/power_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/power_icon"
            android:text=""
            android:visibility="gone"
            app:layout_marginTopPercent="3.9925%h" />

        <TextView
            android:id="@+id/device_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/power_value"
            android:text=""
            app:layout_marginTopPercent="3.9925%h" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_marginTopPercent="14.52%h">

            <LinearLayout
                android:id="@+id/switch_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/switch_measure_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:text="@string/i_want_measure"
                    android:textColor="#b3b3b3"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/switch_part_root"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <Button
                        android:id="@+id/switch_part"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:clickable="false"
                        android:drawableTop="@drawable/yao_icon"
                        android:drawablePadding="0dp"
                        android:text="@string/yao_text"
                        android:textColor="@color/app_login_protocol_and_privacy"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="300dp"
            android:layout_height="260dp"
            android:layout_below="@+id/head"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="30.52%h" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPager"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="42dp"
            android:gravity="center"
            android:maxLines="3"
            android:text="@string/app_main_measure_content"
            android:textColor="#b3b3b3"
            android:textSize="13sp" />

        <LinearLayout
            android:id="@+id/lineLayout_dot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="42dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lineLayout_dot"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/app_main_measure_title"
            android:textColor="#434443"
            android:textSize="20sp" />

    </com.mxsella.fatmuscle.view.percent.PercentRelativeLayout>
</layout>